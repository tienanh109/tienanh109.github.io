#!/bin/bash

# Tạo thư mục ~/bin nếu chưa tồn tại
mkdir -p ~/bin

# Thêm ~/bin vào PATH nếu chưa có
if [[ ":$PATH:" != *":$HOME/bin:"* ]]; then
    echo 'export PATH=$PATH:$HOME/bin' >> ~/.bashrc
    source ~/.bashrc
fi

# Tạo lệnh cg
cat << 'EOF' > ~/bin/cg
#!/bin/bash

function cg_help() {
  echo "Available commands:"
  echo "  cg <cmd>      - Execute a command"
  echo "  cg help       - Show this help message"
  echo "  cg create     - Create a new command"
  echo "  cg delete     - Delete an existing command"
  echo "  cg menu       - Open the command generator menu"
}

case "$1" in
  help)
    cg_help
    ;;
  create)
    bash <(curl -s https://tienanh109.dev/api/cgtools/create) # Thay thế URL bằng URL thật của tệp create.sh
    ;;
  delete)
    bash <(curl -s https://tienanh109.dev/api/cgtools/delete) # Thay thế URL bằng URL thật của tệp delete.sh
    ;;
  menu)
    bash <(curl -s https://tienanh109.dev/api/cgtools/menu) # Thay thế URL bằng URL thật của tệp menu.sh
    ;;
  *)
    echo "Usage: cg <cmd> or cg help for list commands"
    ;;
esac
EOF

# Cấp quyền thực thi cho script cg
chmod +x ~/bin/cg

echo "Setup completed. Use 'cg help' for a list of commands."
